<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".forum">


    <?xml version="1.0" encoding="utf-8"?>
    <ScrollView
        android:id="@+id/main_pg_main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/forumpage"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/faq" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="293dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="match_parent"
                                android:layout_height="304dp"
                                app:srcCompat="@drawable/rectangle58" />

                            <ExpandableListView
                                android:id="@+id/expanded_menu"
                                android:layout_width="336dp"
                                android:layout_height="281dp"
                                android:layout_marginLeft="30dp" />


                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/communitylabel" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="331dp"
                android:orientation="vertical">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <ImageView
                                android:id="@+id/imageView8"
                                android:layout_width="match_parent"
                                android:layout_height="304dp"
                                app:srcCompat="@drawable/rectangle58" />

                            <ImageButton
                                android:id="@+id/imageButton8"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background= "none"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/rectangle96" />

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="56dp"
                                android:layout_height="30dp"
                                android:layout_gravity="center"
                                android:text="Forum" />

                            <ImageButton
                                android:id="@+id/imageButton12"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="none"
                                android:layout_marginLeft="250dp"
                                android:layout_gravity="bottom"
                                app:srcCompat="@drawable/roundbutton" />

                        </FrameLayout>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>