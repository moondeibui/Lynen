<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page__1"
    tools:context=".MainActivity"
    android:id="@+id/main_pg_scrollview">

        <LinearLayout
            android:id="@+id/main_pg_main_linear_layout_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/main_pg_sub_linear_layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_page_recycle_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/rectangle_9">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_pg_sub_linear_layout_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_page_locate_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/rectangle_10">
                </ImageButton>

                <ImageButton
                    android:id="@+id/main_page_product_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:src="@drawable/rectangle_11">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_pg_sub_linear_layout_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_page_community_faqs_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:src="@drawable/rectangle_41">
                </ImageButton>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main_pg_sub_linear_layout_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/main_page_statistics_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:src="@drawable/rectangle_10">
                </ImageButton>

                <ImageButton
                    android:id="@+id/main_page_adopt_bin_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:background="@null"
                    android:src="@drawable/rectangle_11">
                </ImageButton>

            </LinearLayout>

        </LinearLayout>
</ScrollView>